{
    "compilerOptions": {
      "baseUrl": "src",
      "jsx": "react-jsx",
      "paths": {
        "@/*": ["*"]
      },
      "target": "es6",
      "module": "esnext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true
    },
    "include": ["src"]
  }